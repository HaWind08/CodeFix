#include<iostream>

using namespace std;

const int MAXA = 100;

void Nhap(double a[MAXA], int& n)
{
	cout << "Nhap so phan tu cua mang: "; cin >> n;

	cout << "Nhap mang: " << endl;
	for (int i = 0; i < n; i++)
	{
		cout << "a[" << i << "]= ";
		cin >> a[i];
	}
}

void Xuat(double a[MAXA], int n)
{
	cout << "Mang vua nhap la: " << endl;
	for (int i = 0; i < n; i++)
	{
		cout << a[i] << " ";
	}
	cout << endl;
}

void SapXep(double a[MAXA], int n)
{
	// Sap xep mang theo thu tu giam dan
	for (int i = 0; i < n; i++)
	{
		for (int j = i + 1; j < n; j++)
		{
			if (a[i] < a[j]) swap(a[i], a[j]);
		}
	}

	double min_a, max_a;

	for (int i = 1; i < n; i++)
	{
		if (a[i] != a[0])
		{
			min_a = i;
			break;
		}
	}

	for (int i = n - 2; i >= 0; i--)
	{
		if (a[i] != a[n - 1])
		{
			max_a = i;
			break;
		}
	}

	for (int i = min_a; i <= max_a; i++)
	{
		for (int j = i + 1; j <= max_a; j++)
		{
			if (a[i] > a[j])
			{
				swap(a[i], a[j]);
			}
		}
	}

	cout << "Mang sau khi sap xep: " << endl;
	for (int i = 0; i < n; i++)
	{
		cout << a[i] << " ";
	}
}

int main()
{
	double a[MAXA]; int n;

	Nhap(a, n);
	Xuat(a, n);
	SapXep(a, n);

	return 0;

}
